<html lang="en">
    <head>
        <script src='https://kit.fontawesome.com/a076d05399.js'></script>
        <link rel="stylesheet" type="text/css" href="/stylesheets/invoice.css" />
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Invoice</title>
    </head>
    <!-- Invoice template used from Invoice WODS-->
    <table border="2">
        <tbody>
            <tr>
                <th style="text-align: center" colspan="4"><span style="font-family: cursive">Local Produce Invoice</th>
                </span>
            </tr>
            <tr>
                <th style="text-align: center" width="43%">Item</th>
                <th style="text-align: center" width="11%">Quantity</th>
                <th style="text-align: center" width="13%">Price</th>
                <th style="text-align: center" width="54%">Amount</th>
            </tr>
            invoice-placeholder
            <tr>
                <td colspan="4" width="100%">&nbsp;</td>
            </tr>
            <!-- Row for Sub-total -->
            <tr>
                <td style="text-align: center" colspan="3" width="67%">Sub-total</td>
                <td width="54%">
                    subtotal-placeholder
                </td>
            </tr>
            <!-- Row for Tax -->
            <tr>
                <td style="text-align: center" colspan="3" width="67%">
                    <span style="font-family: arial">Tax @ 5.75%</span>
                </td>
                <td width="54%">
                    tax-placeholder
                </td>
            </tr>
            <!-- Row for Total with bold font -->
            <tr>
                <td style="text-align: center" colspan="3" width="67%">
                    <strong>Total</strong>
                </td>
                <td width="54%">
                    <b>
                        total-placeholder
                    </b>
                </td>
            </tr>
        </tbody>
    </table>
    <strong>Thank you for your purchase, username-placeholder. <br>A copy of this invoice will also be sent to your
        email at email-placeholder .</strong>
</html>